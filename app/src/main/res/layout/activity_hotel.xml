<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/visit6"
    tools:context=".Hotel">


    <TextView
        android:id="@+id/tvnatural"
        android:layout_width="171dp"
        android:layout_height="27dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:gravity="center"
        android:text="Boooking for Hotel"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="50dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="163dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Enter your Full name"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHighlight="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvnatural" />

    <EditText
        android:id="@+id/email"
        android:layout_width="183dp"
        android:layout_height="62dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Enter Your Email"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvnatural" />

    <EditText
        android:id="@+id/hotel"
        android:layout_width="170dp"
        android:layout_height="54dp"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:hint=" Enter Hotel Name"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <EditText
        android:id="@+id/room"
        android:layout_width="180dp"
        android:layout_height="62dp"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:hint="Enter Room Type"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <EditText
        android:id="@+id/number"
        android:layout_width="173dp"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:hint="Number of Visitors"
        android:inputType="number"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotel" />

    <EditText
        android:id="@+id/Number2"
        android:layout_width="183dp"
        android:layout_height="56dp"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:hint="Flight Number"
        android:inputType="number"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/room" />

    <EditText
        android:id="@+id/edit"
        android:layout_width="178dp"
        android:layout_height="45dp"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:hint="Free Pickup?"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Number2" />

    <EditText
        android:id="@+id/request"
        android:layout_width="176dp"
        android:layout_height="60dp"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:hint="Special Requests"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Number2" />

    <Button
        android:id="@+id/button6"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:text="Booking"
        app:layout_constraintTop_toBottomOf="@+id/edit"
        tools:layout_editor_absoluteX="146dp" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="115dp"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="Previous"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/request" />


</androidx.constraintlayout.widget.ConstraintLayout>